                <Button Grid.Column="0" Text="rad/deg"/>
                <Button Grid.Column="1" Text="tryg"/>
                <Button Grid.Column="2" Text="math"/>
                <Button Grid.Column="3" Text="consts"/>
            </Grid>

            
            <Grid Grid.Row="6"
                  Style="{StaticResource calculatorRow}">
                <Button Grid.Column="0" Text="sin"/>
                <Button Grid.Column="1" Text="cos"/>
                <Button Grid.Column="2" Text="tan"/>
                <Button Grid.Column="3" Text="cot"/>
            </Grid>
-->
        </Grid>

    </StackLayout>
</ContentPage>
